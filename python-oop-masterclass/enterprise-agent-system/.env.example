# ============================================================================
# Environment Configuration Example
# Copy this file to .env and update with your values
# ============================================================================

# Application
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/agent_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=agent_system

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=agent-system-consumers
KAFKA_TOPIC_PREFIX=agent-system

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKER_CONCURRENCY=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MCP=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# Memory Configuration
MEMORY_MAX_MESSAGES=20
MEMORY_SUMMARIZATION_THRESHOLD=15
CACHE_TTL_SECONDS=3600

# Agent Configuration
AGENT_TIMEOUT_SECONDS=30
AGENT_MAX_RETRIES=3
AGENT_TEMPERATURE=0.7

# Performance
MAX_WORKERS=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=60

# Development
HOT_RELOAD=true
MOCK_SERVICES=false
