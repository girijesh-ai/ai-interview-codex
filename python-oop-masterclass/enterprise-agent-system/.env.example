# Enterprise Agent System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Enterprise Agent System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# ============================================================================
# API SETTINGS
# ============================================================================
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# ============================================================================
# LLM SETTINGS
# ============================================================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
LLM_MODEL="gpt-4-turbo-preview"
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
POSTGRES_URL="postgresql://user:password@localhost:5432/enterprise_agent"
REDIS_URL="redis://localhost:6379/0"
WEAVIATE_URL="http://localhost:8080"
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY="change-this-to-a-secure-random-string-at-least-32-chars"

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="json"
